{
  "manifest_version": 3,
  "name": "SecureAuth",
  "version": "1.0",
  "description": "A client-side browser extension to counteract MFA phishing attacks.",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "128": "icon/icon.png"
  },
  "action": {
    "default_icon": {
      "128": "icon/icon.png"
    },
    "default_title": "SecureAuth"
  },
  "options_page": "options.html"

}
